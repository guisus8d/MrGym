---
import Logo from '../assets/logo.png';

// Redirección con JavaScript (se ejecuta en el cliente)
const redirectScript = `
  setTimeout(() => {
    window.location.href = '/inicio';
  }, 2000);
`;
---

<!-- Contenido de la pantalla de carga -->
<div class="contenedor-carga-index">
  <img src={Logo.src} alt="Logo" class="logo" />
</div>

<!-- Script para la redirección -->
<script is:inline>
  setTimeout(() => {
    window.location.href = '/inicio';
  }, 2000);
</script>

<style is:global>
  :root {
    --color-tip2: rgb(248, 252, 10);
    --color-tip1: rgb(155, 145, 3);
  }

  .contenedor-carga-index {
    background: linear-gradient(0deg, var(--color-tip1), var(--color-tip2));
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .logo {
    width: 40%;
    min-width: 150px;
    max-width: 300px;
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(0.8); }
    100% { transform: scale(1); }
  }
</style>