---
import IconoImg from '../assets/icono/menu.png'
import '@fontsource-variable/teko';
---

<header>




<div class="menu">
       <button class="menu-trigger" onclick="toggleMenu()">
   <img src={IconoImg.src} alt="">
  </button>
  <div class="fullscreen-menu" id="fullscreenMenu">
    <button class="close-btn" onclick="toggleMenu()">âœ•</button>
    <nav>
      <ul>
        <li><a href="/">INICIO</a></li>
        <li><a href="/servicios">SERVICIOS</a></li>
        <li><a href="/portafolio">PORTAFOLIO</a></li>
        <li><a href="/contacto">CONTACTOS</a></li>
      </ul>
    </nav>
  </div>
</div>
</div>
</header>


<script is:inline>
function toggleMenu() {
  const menu = document.getElementById('fullscreenMenu');
  const trigger = document.querySelector('.menu-trigger');
  
  menu.classList.toggle('active');
  trigger.classList.toggle('hidden');
  document.body.classList.toggle('no-scroll');
}

</script>



<style>
li{
  font-family: 'Teko Variable', sans-serif;
}
.menu-trigger.hidden {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.3s ease, visibility 0s linear 0.3s;

}

.menu-trigger {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transition: opacity 0.3s ease 0.3s, visibility 0s linear;
}
      :root {
    --color-tip2: rgb(248, 252, 10);
    --color-tip1: rgb(155, 145, 3);
  }

    .menu{
 position: relative;
 background-color: rgb(0, 0, 0);
 width: 100%;
 height: 60px;
 box-shadow: 2px 1px 10px rgba(0, 0, 0, 0.514);
}

  .menu-container {
    position: relative;
    z-index: 1000;
  }


  .menu-trigger {
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 1001;
  }


  .fullscreen-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.829);
    backdrop-filter: blur(10px) brightness(1.2);
    -webkit-backdrop-filter: blur(10px) brightness(1.2);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
  }



  .fullscreen-menu.active {
    opacity: 1;
    visibility: visible;
  }


  .fullscreen-menu nav ul {
    list-style: none;
    padding: 0;
    text-align: center;
  }

  .fullscreen-menu nav li {
    margin: 30px 0;
  }

  .fullscreen-menu nav a {
    color: var(--color-tip1);
    font-size: 1.4rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .fullscreen-menu nav a:hover {
    color: var(--color-tip2);
  }


  .close-btn {
    position: absolute;
    top: 30px;
    right: 30px;
    background: none;
    border: none;
    color: var(--color-tip1);
    font-size: 1.3rem;
    cursor: pointer;
  }


  .no-scroll {
    overflow: hidden;
  }

  .menu-trigger{
    position: relative;
   
  }
  .menu-trigger img{
    position: relative;
    width: 25px;
    top: -10px;
    left: 30px;
  }
button, a, input, textarea {
  -webkit-tap-highlight-color: transparent;
  outline: none;
}

</style>




